{% extends "layout.html.twig" %}
{% block title %}{{ parent() }} :: Users Management{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Users Management{% endblock %}

{% block content %}
    {# {% include 'IAUsersBundle:Profile/partial:_profile-header.html.twig' %} #}
    <div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Users</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': 'menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        
        <div class="row">   
            <div class="col-lg-12">
                <section class="panel">
                    <table class="table table-striped table-advance table-hover">
                        <tr>
                            <th width="50">N</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Name</th>
                            <th width="150">Action</th>
                        </tr>
                        {% for item in users %}
                            <tr>
                                <td>
                                    <input type="checkbox" name="active[{{ item.getId() }}]" />
                                    {{ item.getId() }}
                                </td>
                                <td><a href="{{ path('ia_users_users_update', {'id': item.getId()}) }}?id={{ item.id }}">{{ item.username  }}</a></td>
                                <td>{{ item.email  }}</td>
                                <td>{{ item.roles | join(' , ')  }}</td>
                                <td>
                                	{% if item.userInfo %}
                                        <a href="{{ path('ia_users_users_update', {'id': item.getId()}) }}">
                                            {{ item.userInfo.getFullName() }}
                                        </a>
                                    {% endif %}
                                </td>
                                <td>
                                	<div class="btn-group">
                                        <div class="btn-group">
                                            <a class="btn btn-danger btnDelete" href="#" data-url="{{ path('ia_users_users_delete', {'id': item.id}) }}">
                                                <i class="icon_close_alt2"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </section>
            </div>
        </div>
    </div>
{% endblock %}
