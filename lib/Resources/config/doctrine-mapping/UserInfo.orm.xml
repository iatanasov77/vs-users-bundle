<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="VS\UsersBundle\Model\UserInfo">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        
        <one-to-one field="user" target-entity="VS\UsersBundle\Model\UserInterface"  />
        
        <field name="apiToken" column="api_token" type="string" nullable="false" />
        <field name="country" column="country" type="string" nullable="false" />
        <field name="birthday" column="birthday" type="datetime" nullable="false" />
        <field name="mobile" column="mobile" type="string" nullable="false" />
        <field name="website" column="website" type="string" nullable="false" />
        <field name="occupation" column="occupation" type="string" nullable="false" />
        
    </mapped-superclass>
</doctrine-mapping>
