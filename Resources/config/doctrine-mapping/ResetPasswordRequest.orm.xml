<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="Vankosoft\UsersBundle\Model\ResetPasswordRequest">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <many-to-one field="user" target-entity="Vankosoft\UsersBundle\Model\UserInterface"  />
        
        <field name="selector" column="selector" type="string" length="24" nullable="false" />
        <field name="hashedToken" column="hashedToken" type="string" length="128" nullable="false" />
        <field name="requestedAt" column="requestedAt" type="datetime" nullable="false" />
        <field name="expiresAt" column="expiresAt" type="datetime" nullable="false" />
        
    </mapped-superclass>
</doctrine-mapping>
