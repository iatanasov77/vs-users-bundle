<table class="table table-striped table-advance table-hover" id="tblUsersRoles">
	<thead>
        <tr>
            <th>{{ 'vs_application.template.items_index_row_title' | trans( {},'VSApplicationBundle' ) }}</th>
            <th>{{ 'vs_users.template.users_roles_index_row_role' | trans( {},'VSUsersBundle' ) }}</th>
            <th>{{ 'vs_users.template.users_roles_index_row_role_description' | trans( {},'VSUsersBundle' ) }}</th>
            <th>{{ 'vs_users.template.users_roles_index_row_actions' | trans( {},'VSUsersBundle' ) }}</th>
        </tr>
    </thead>
	<tbody>
        {% for item in items %}
        	{% if not item.parent %}
        		{% include '@VSUsers/UsersRoles/Partial/simpleTreeTableRows.html.twig' with {'item': item, 'parentId': 0} %}
        	{% endif %}
        {% endfor %}
    </tbody>
</table>
