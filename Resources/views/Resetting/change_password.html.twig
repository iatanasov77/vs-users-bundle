{% extends "@VSApplication/layout-login.html.twig" %}

{% block head_styles %}
	{{ parent() }}
	
	<style>
		.text-secondary {
		    color: #ff407b !important;
		}
	</style>
{% endblock %}

{% block content %}
	<!-- ============================================================== -->
    <!-- login page  -->
    <!-- ============================================================== -->
    <div class="card-header text-center">
    	<h3 class="mb-1">{{ 'vs_users.template.profile_show_tab_change_password' | trans( {},'VSUsersBundle' ) }}</h3>
    </div>
    <div class="card-body">
        {{ form_start(form, { 'attr': {'class': 'login-form '} }) }}
        	<input type="hidden" name="_csrf_token" value="{{ csrf_token('change_password') }}" />
            
            <p>{{ 'vs_users.form.resetting.new_password_lable' | trans( {},'VSUsersBundle' ) }}</p>
            <div class="form-group">
                {{ form_widget(form.password.first, {'attr': {'class': 'form-control form-control-lg', 'placeholder': form.password.first.vars.label|trans}}) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.password.second, {'attr': {'class': 'form-control form-control-lg', 'placeholder': form.password.second.vars.label|trans}}) }}
            </div>
            
            <div class="form-group pt-1">
                {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-block btn-primary btn-xl'}}) }}
           	</div>
     	{{ form_end(form, {'render_rest': false}) }}
    </div>
    <div class="card-footer text-center">
    {#
        <span>Don't have an account? 
         	<a href="{{ path('vs_users_register_form') }}" class="text-secondary">Sign Up</a>
        </span>
    #}
    </div>
{% endblock %}
