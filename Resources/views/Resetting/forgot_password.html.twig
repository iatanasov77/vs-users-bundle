{% extends "@VSApplication/layout-login.html.twig" %}

{% block head_styles %}
	{{ parent() }}
	
	<style>
		.text-secondary {
		    color: #ff407b !important;
		}
	</style>
{% endblock %}

{% block content %}
	<!-- ============================================================== -->
    <!-- login page  -->
    <!-- ============================================================== -->
    <div class="card-header text-center">
    	<h3 class="mb-1">{{ 'vs_users.template.forgot_password_header_title' | trans( {},'VSUsersBundle' ) }}</h3>
    </div>
    <div class="card-body">
        {{ form_start(form, { 'attr': {'class': 'login-form '} }) }}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('forgot_password') }}" />
            
            <p>{{ 'vs_users.template.forgot_password_form_header' | trans( {},'VSUsersBundle' ) }}</p>
            <div class="form-group">
                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'autocomplete': 'off', 'placeholder': form.email.vars.label|trans }}) }}
            </div>
            
            <div class="form-group pt-1">
                {{ form_widget(form.btnSubmit, {'attr': {'class': 'btn btn-block btn-primary btn-xl'}}) }}
           	</div>
        {{ form_end(form, {'render_rest': false}) }}
    </div>
    <div class="card-footer text-center">
        <span>{{ 'vs_users.form.dont_have_accont' | trans( {},'VSUsersBundle' ) }} 
        	<a href="{{ path('vs_users_register_form') }}" class="text-secondary">
				{{ 'vs_users.template.forgot_password_form_button_signup' | trans( {},'VSUsersBundle' ) }}
			</a>
        </span>
    </div>
{% endblock %}
