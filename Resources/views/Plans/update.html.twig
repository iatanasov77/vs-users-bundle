{% extends "layout.html.twig" %}

{% block title %}{{ parent() }} :: Create New Plan{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Create New Plan{% endblock %}

{% block content %}
    <div class="row">   
        <div class="col-lg-12">

            {{ form_start(form, { 'attr': {'class': 'form-horizontal '} }) }}

            {% if form_errors(form) is not empty %}
                <div class="alert alert-block alert-danger fade in">
                    <button type="button" class="close close-sm" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <strong>Error!</strong> {{ form_errors(form) }}
                </div>
            {% endif %}
            <section class="panel">
                <header class="panel-heading"> Plan </header>
                <div class="panel-body">
                    <div class="form-group">    
                        {{ form_label(form.enabled, null, {
                            'label_attr': {'class': 'control-label col-lg-1'}
                            }) 
                        }}
                        <div class="col-lg-10">
                            <div class="checkbox">
                                {{ form_widget(form.enabled) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.title, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-10">
                            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.subscriptionPeriod, null, {
                            'label_attr': {'class': 'col-sm-1 control-label'}
                            }) 
                        }}
                        <div class="col-sm-10">
                            {{ form_widget(form.subscriptionPeriod, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
            
                </div>
            </section>
            {{ form_widget(form.btnSave, {'attr': {'class': 'btn btn-primary', 'id':'btnSave'}}) }}
            {{ form_widget(form.btnCancel, {'attr': {'class': 'btn btn-default', 'id':'btnCancel'}}) }}
            {{ form_end(form, {'render_rest': false}) }}

        </div>
    </div>   
{% endblock content %}

{% block body_scripts %}
    {{ parent() }}
   
    {{ encore_entry_script_tags( 'jquery-duplicate-fields', null, 'new-template' ) }}
    {{ encore_entry_script_tags( 'fieldsets-edit', null, 'new-template' ) }}
{% endblock %}
